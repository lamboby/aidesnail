    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="15dip"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/itemContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dip"
            android:orientation="vertical"
            android:scrollbars="horizontal"
            android:focusable="true"  
    android:focusableInTouchMode="true" >

            <LinearLayout
                android:id="@+id/linearfullschool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
      			android:focusable="true"  
   				 android:focusableInTouchMode="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
               
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="全称"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/Tschoolfullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:maxLength="20"
                    android:hint="输入小于20字符的全称" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="简称"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="wrap_content"
                    android:id="@+id/Tschoolshortname"
                    android:layout_height="wrap_content"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:hint="输入小于4字符的简称" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="地址"
                    android:textStyle="bold" />

                 <Spinner
                     android:id="@+id/spin_province"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 </LinearLayout>
 				<LinearLayout
                 	android:layout_width="match_parent"
               	 android:layout_height="wrap_content"
                	android:duplicateParentState="true"
               	 android:gravity="center_vertical" >

                 <Spinner
                     android:id="@+id/spin_city"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="60dip"
                     android:layout_weight="1" />

                 <Spinner
                     android:id="@+id/spin_county"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1" />

                   </LinearLayout>
                   <LinearLayout
                        android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >

                       <EditText
                           android:id="@+id/Taddress"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="60dip"
                           android:layout_weight="0.31"
                           android:hint="输入详细地址" >
                        
                       </EditText>


</LinearLayout>


 <LinearLayout
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearfullschool"

                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                    android:text="负责人"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Tschoolpic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="输入培训机构负责人"
                    android:maxLength="10"
                    android:maxLines="1" >

                </EditText>

</LinearLayout>
 <LinearLayout
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
       
                    android:gravity="center_vertical"
                    android:text="手机"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Tschoolphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="输入负责人手机号码"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:maxLines="1" >

                </EditText>

</LinearLayout>

  <LinearLayout
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                         android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:text="类型"
                    android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/Tschoolgroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/rbMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="主机构" />

                <RadioButton
                    android:id="@+id/rbBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分支机构" />
                </RadioGroup>

</LinearLayout>
 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                   
                    android:gravity="center_vertical"
                    android:text="管理密码"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:hint="小于20位"
                    android:id="@+id/adminPassword"
                    android:inputType="textVisiblePassword"
                    android:maxLength="20" >

                </EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:maxLines="1"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                 
                    android:gravity="center_vertical"
                    android:text="普通密码"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                       android:id="@+id/commonPassword"
                    android:layout_weight="1"
                    android:hint="小于20位"
                    android:maxLines="1"
                    android:inputType="textVisiblePassword"
                    android:maxLength="20" >

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearfullschool"

                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="建设商"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
   					   android:maxLines="1"
   					      android:id="@+id/editISP"
                    android:text="忠帮科技"
                    android:layout_weight="1"
                    >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearfullschool"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                   
                    android:gravity="center_vertical"
                    android:text="MAC地址"
                    android:textStyle="bold"                    
                     />

                <EditText
                    android:id="@+id/editMac"
                     android:maxLines="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="1234567890abcdef:"
                   android:hint="请输入MAC地址"
                    android:maxLength="17" >
                </EditText>

                <Button
                    android:id="@+id/btn_addwifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
       
                    android:text="添加" />

                 </LinearLayout>
                 <LinearLayout
					   android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearfullschool"
                android:duplicateParentState="true"
                android:gravity="center_vertical" >
			 <Button
                        android:id="@+id/btn_searchwifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="扫描附近热点"
                        android:textColor="@android:color/white" />		
		</LinearLayout>

                    <ListView
                        android:id="@+id/list_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:stackFromBottom="true" 
android:transcriptMode="alwaysScroll"                         />

                    <ImageView
                        android:id="@+id/imgview_barcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/border" />

                    <Button
                        android:id="@+id/btn_uploadSchool"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:background="@drawable/button_selector"
                        android:text="上传学校信息"
                        android:textColor="@android:color/white"
                        android:visibility="visible" />

        <Button
            android:id="@+id/btn_createbarcode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/button_selector"
            android:text="生成定位点二维码"
            android:textColor="@android:color/white"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/btn_uploadBarcode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/button_selector"
            android:text="上传二维码"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
    
    


